<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>servlet.HelloServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DBDemo</servlet-name>
		<servlet-class>servlet.DBDemo</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RedirectFwdTest</servlet-name>
		<servlet-class>servlet.RedirectFwdTest</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LifeCycleTest</servlet-name>
		<servlet-class>servlet.LifeCycleTest</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AcctManager</servlet-name>
		<servlet-class>servlet.AcctManager</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>servlet.Login</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DBDemo</servlet-name>
		<url-pattern>/dbdemo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RedirectFwdTest</servlet-name>
		<url-pattern>/redirectFwdTest</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LifeCycleTest</servlet-name>
		<url-pattern>/lifeCycleTest</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AcctManager</servlet-name>
		<url-pattern>/acctManager</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>dbname</param-name>
		<param-value>test</param-value>
	</context-param>
	<context-param>
		<param-name>dbusername</param-name>
		<param-value>password</param-value>
	</context-param>


	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>filters.CharEncodeFilter</filter-class>
		<init-param>
			<param-name>charSet</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>LoginChecker</filter-name>
		<filter-class>filters.LoginChecker</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LoginChecker</filter-name>
		<servlet-name>AcctManager</servlet-name>
	</filter-mapping>
</web-app>
